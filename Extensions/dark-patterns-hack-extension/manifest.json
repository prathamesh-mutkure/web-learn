{
  "manifest_version": 2,
  "version": "0.0.2",
  "name": "Crosshackers - Extension",
  "description": "Chrome extension for Dark Pattern Hackathon",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://code.jquery.com; object-src 'self'"
}
